@model ElementViewModel
   

    <div class="card">
        <div class="card-header">
            <h3>Add a new element</h3>
        </div>
        <div class="card-body">
            <div id="theForm">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Name">Element Name:</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Symbol">Symbol:</label>
                        <input asp-for="Symbol" class="form-control" />
                        <span asp-validation-for="Symbol" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AtomicNumber">Atomic Number:</label>
                        <input asp-for="AtomicNumber" class="form-control" />
                        <span asp-validation-for="AtomicNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Element Price:</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Element Description:</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type">Element Type:</label>
                        <select asp-for"Type" asp-items="Html.GetEnumSelectList<ElementType>()" class="form-control" ></select>
                        @*<input asp-for="Type" class="form-control" />*@
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>
        <div class="card-footer">
            <div class="text-success"> @ViewBag.UserMessage</div>
        </div>
    </div>