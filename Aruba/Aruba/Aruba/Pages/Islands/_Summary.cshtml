@using Aruba.Core;
@model Island

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Climate: @Model.ClimateType</span>
        <span>Rating: @Model.Rating</span>
    </div>
    <div class="card-footer">
        <a asp-page="./Detail"
           asp-route-islandId="@Model.Id"
           class="btn btn-info">
            Detail
        </a>
        <a asp-page="./Edit"
           asp-route-islandId="@Model.Id"
           class="btn btn-warning">
            Edit
        </a>
        <a asp-page="./Delete"
           asp-route-islandId="@Model.Id"
           class="btn btn-danger">
            Delete
        </a>
    </div>
</div>